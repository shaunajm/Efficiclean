<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">


    <TextView
            android:text="Room: 215"
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="360dp"
            android:layout_height="59dp"
            android:id="@+id/tvRoomNumber"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    />
    <CheckBox
            android:text="Approve"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="257dp"
            android:textAlignment="center"
            android:layout_height="60dp" android:id="@+id/cbApprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.388" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRoomNumber"/>

    <CheckBox
            android:text="Disapprove"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="277dp"
            android:textAlignment="center"
            android:layout_height="64dp" android:id="@+id/cbDisapprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.399" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cbApprove"/>

    <EditText
            android:layout_width="428dp"
            android:layout_height="105dp"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="20sp"
            android:hint="Comments"
            android:textSize="25sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/etComments" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cbDisapprove"/>

    <Button
            android:text="Submit"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="334dp"
            android:layout_height="70dp"
            android:id="@+id/btCleansApprovalSubmit" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etComments"/>



</android.support.constraint.ConstraintLayout>