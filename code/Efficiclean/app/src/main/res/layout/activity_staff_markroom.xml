<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRoomNumber"
        android:layout_width="213dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="Room Number: "
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etRoomNumber"
        android:layout_width="127dp"
        android:layout_height="57dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/textview_border"
        android:ems="15"
        android:padding="10sp"
        android:inputType="number"
        android:text=""
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.966"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="272dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:text="Select room status: "
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgStatus"
        android:layout_width="342dp"
        android:layout_height="164dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="212dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbPleaseServiceMyRoom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Please service my room"
            android:textSize="28sp" />

        <RadioButton
            android:id="@+id/rbDoNotDisturb"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Do not Disturb"
            android:textSize="28sp" />

        <RadioButton
            android:id="@+id/rbCheckingOut"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Checking out"
            android:textSize="28sp" />

    </RadioGroup>

    <Button
            android:id="@+id/btMarkRoom"
            android:layout_width="163dp"
            android:layout_height="57dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/roundbutton"
            android:text="Mark Status"
            android:textColor="@color/myGold"
            android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="407dp" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/btFinishCheck"
            android:layout_width="163dp"
            android:layout_height="57dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/roundbutton"
            android:text="Finish Check"
            android:textColor="@color/myGold"
            android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="407dp" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>