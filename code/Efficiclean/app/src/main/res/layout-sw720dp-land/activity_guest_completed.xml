<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Your room has been serviced already today."
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="700dp"
            android:layout_height="130dp"
            android:id="@+id/tvServiced" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="102dp"/>


    <TextView
            android:text="Please log in tomorrow to mark your room's status again."
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="700dp"
            android:layout_height="130dp"
            android:id="@+id/tvTomorrow" android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/tvServiced" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
            android:text="Thank you for using Efficiclean!"
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="700dp"
            android:layout_height="100dp"
            android:id="@+id/tvThankYou" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTomorrow" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>