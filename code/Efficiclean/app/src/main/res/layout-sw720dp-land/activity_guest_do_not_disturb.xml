<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Thank you for marking your room as 'Do not disturb'"
            android:textSize="38sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="573dp"
            android:layout_height="121dp"
            android:id="@+id/tvMarked"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="54dp"
    />


    <TextView
            android:text="If you would like your room to be serviced today, please mark it by 15:00."
            android:textSize="38sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="705dp"
            android:layout_height="134dp"
            android:id="@+id/tvReMark" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarked"
    />


    <TextView
            android:text="Thank you for using Efficiclean."
            android:textSize="38sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="619dp"
            android:layout_height="55dp"
            android:id="@+id/tvThanks"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReMark" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <Button
            android:text="Return home"
            android:textSize="38sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="366dp"
            android:layout_height="93dp"
            android:id="@+id/btHome"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/tvThanks"/>

</android.support.constraint.ConstraintLayout>