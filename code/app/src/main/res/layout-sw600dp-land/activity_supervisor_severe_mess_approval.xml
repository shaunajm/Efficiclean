<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Severe Mess Approval"
            android:textSize="37sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="434dp"
            android:layout_height="63dp"
            android:id="@+id/tvSevereMessApproval"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="Room: 215"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="178dp"
            android:layout_height="33dp"
            android:id="@+id/tvRoomNumber"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.214"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/tvSevereMessApproval"/>

    <TextView
            android:text="Description:"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="182dp"
            android:layout_height="42dp"
            android:id="@+id/tvDescription" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.215"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvRoomNumber"/>

    <TextView
            android:layout_width="364dp"
            android:layout_height="77dp"
            android:text=""
            android:textColor="#000"
            android:padding="20sp"
            android:textSize="25sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/tvDescriptionBox" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSevereMessApproval" app:layout_constraintHorizontal_bias="0.58"/>
    <CheckBox
            android:text="Approve"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="257dp"
            android:textAlignment="center"
            android:layout_height="60dp" android:id="@+id/cbApprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.371" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionBox"/>

    <CheckBox
            android:text="Disapprove"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="277dp"
            android:textAlignment="center"
            android:layout_height="64dp" android:id="@+id/cbDisapprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.381" android:layout_marginTop="-16dp"
            app:layout_constraintTop_toBottomOf="@+id/cbApprove"/>

    <EditText
            android:layout_width="449dp"
            android:layout_height="76dp"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="20sp"
            android:hint="Reason"
            android:textSize="25sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/etReason" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cbDisapprove"/>

    <Button
            android:text="Submit"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="260dp"
            android:layout_height="54dp"
            android:id="@+id/btSevereMessApprovalSubmit" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etReason"/>



</android.support.constraint.ConstraintLayout>