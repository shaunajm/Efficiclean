<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.app.efficiclean.GuestHome">

<Button
        android:text="View Map"
        android:textSize="23sp"
        android:textColor="@color/myGold"
        android:background="@drawable/roundbutton"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:id="@+id/btViewMap"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="37dp"/>

<Button
        android:text="Approve Break"
        android:textSize="23sp"
        android:textColor="@color/myGold"
        android:background="@drawable/roundbutton"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:id="@+id/btApproveBreak"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.906" android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/btViewMap"/>

<Button
        android:text="Report Absence"
        android:textSize="23sp"
        android:textColor="@color/myGold"
        android:background="@drawable/roundbutton"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:id="@+id/btReportAbsence"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.906"
        android:layout_marginTop="58dp" app:layout_constraintTop_toBottomOf="@+id/btApproveBreak"/>

<Button
        android:text="Cleans approval"
        android:textSize="23sp"
        android:textColor="@color/myGold"
        android:background="@drawable/roundbutton"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:id="@+id/btCleansApproval" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"/>

<Button
        android:text="Hazards approval"
        android:textSize="23sp"
        android:textColor="@color/myGold"
        android:background="@drawable/roundbutton"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:id="@+id/btHazardApproval"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="53dp" app:layout_constraintTop_toBottomOf="@+id/btCleansApproval"/>

<Button
        android:text="Severe Mess approval"
        android:textSize="23sp"
        android:textColor="@color/myGold"
        android:background="@drawable/roundbutton"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:id="@+id/btSevereMessApproval"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/btHazardApproval"/>


<TableLayout
        android:layout_width="292dp"
        android:layout_height="420dp"
        android:stretchColumns="1"
        android:visibility="visible" android:id="@+id/tbTodaysProgress" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="21dp" app:layout_constraintHorizontal_bias="0.057">

    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Today's Progress" android:layout_span="3"
                android:padding="25dip"/>
    </TableRow>

    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Team 1" android:layout_span="3"
                android:padding="18dip" />
    </TableRow>

    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Team 2" android:layout_span="3"
                android:padding="18dip"/>
    </TableRow>

    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Team 3" android:layout_span="3"
                android:padding="18dip"/>
    </TableRow>

    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Team 4" android:layout_span="3"
                android:padding="18dip"/>
    </TableRow>
    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Team 5" android:layout_span="3"
                android:padding="18dip"/>
    </TableRow>
    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Team 6" android:layout_span="3"
                android:padding="18dip"/>
    </TableRow>

</TableLayout>


</android.support.constraint.ConstraintLayout>