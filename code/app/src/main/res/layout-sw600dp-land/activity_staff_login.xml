<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.StaffLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Staff Login"
            android:textSize="36sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStaffLogin"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>

    <TextView
            android:text="Please enter your password."
            android:textSize="26sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnterPassword"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStaffLogin"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/myGold"
            android:textColorHint="#FFF"
            android:background="@color/colorPrimary"
            android:padding="12sp"
            android:hint="Username"
            android:textSize="20sp"
            android:ems="15"
            android:id="@+id/etUsername"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterPassword"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/myGold"
            android:textColorHint="#FFF"
            android:background="@color/colorPrimary"
            android:padding="12sp"
            android:hint="Password"
            android:textSize="20sp"
            android:ems="15"
            android:id="@+id/etPassword"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsername"/>

    <Button
            android:text="Login"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:id="@+id/btStaffLogin"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
    />


</android.support.constraint.ConstraintLayout>
