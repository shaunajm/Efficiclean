<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestHome">


    <TextView
            android:layout_width="589dp"
            android:layout_height="96dp"
            android:inputType="textPersonName"
            android:text="Your current room is: 101"
            android:textSize="50dp"
            android:ems="12"
            android:id="@+id/tvCurrentRoom" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"/>

    <Button
            android:text="Mark Clean"
            android:textSize="33sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:id="@+id/btMarkClean" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/CurrentRoom"/>

    <Button
            android:text="Report Hazard"
            android:textSize="33sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:id="@+id/btReportHazard"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btMarkClean"/>

    <Button
            android:text="Report Severe Mess"
            android:textSize="33sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:id="@+id/btReportSevereMess"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btReportHazard"/>

</android.support.constraint.ConstraintLayout>