<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Thank you for marking your room as 'Checking Out'"
            android:textSize="45sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="749dp"
            android:layout_height="112dp"
            android:id="@+id/tvMarked"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="98dp"
    />


    <TextView
            android:text="We hope you enjoyed your stay."
            android:textSize="45sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="730dp"
            android:layout_height="94dp"
            android:id="@+id/tvEnjoy" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="89dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarked"/>


    <TextView
            android:text="Thank you for using Efficiclean."
            android:textSize="45sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="670dp"
            android:layout_height="103dp"
            android:id="@+id/tvNotify"
            android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnjoy" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
    />

</android.support.constraint.ConstraintLayout>