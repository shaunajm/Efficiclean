<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.GuestHome">

    <Button
            android:text="View Map"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btViewMap"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="37dp"/>

    <Button
            android:text="Approve Break"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btApproveBreak"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.906" android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/btViewMap"/>

    <Button
            android:text="Report Absence"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btReportAbsence"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.906"
            android:layout_marginTop="58dp" app:layout_constraintTop_toBottomOf="@+id/btApproveBreak"/>

    <Button
            android:text="Cleans approval"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btCleansApproval" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="37dp"/>

    <Button
            android:text="Hazards approval"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btHazardApproval"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="53dp" app:layout_constraintTop_toBottomOf="@+id/btCleansApproval"/>

    <Button
            android:text="Severe Mess approval"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btSevereMessApproval"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/btHazardApproval"/>

    <ScrollView
        android:id="@+id/svTeamProgress"
        android:layout_width="387dp"
        android:layout_height="504dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36">

        <TableLayout
            android:id="@+id/tbTeamProgress"
            android:layout_width="368dp"
            android:layout_height="560dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:stretchColumns="1"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="34dip"
                    android:text="Today's Progress"
                    android:textSize="23sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 1"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 2"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 3"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 4"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 5"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 6"
                    android:textSize="21sp" />
            </TableRow>

        </TableLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>