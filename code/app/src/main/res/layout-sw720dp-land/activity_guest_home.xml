<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.GuestHome">

    <TextView
            android:text="Please select your room's status."
            android:textSize="50sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGuestRoomStatus"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Please service my room"
            android:textSize="36sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:id="@+id/btPleaseService"
            android:onClick="pleaseServiceButtonClick"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/tvGuestRoomStatus" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Do not disturb"
            android:textSize="36sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:id="@+id/btDoNotDisturb"
            android:onClick="doNotDisturbButtonClick"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/btPleaseService"/>

    <Button
            android:text="Checking out"
            android:textSize="36sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:id="@+id/btCheckingOut"
            android:onClick="checkingOutButtonClick"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/btDoNotDisturb"/>

</android.support.constraint.ConstraintLayout>