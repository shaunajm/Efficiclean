<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Thank you for marking your room as 'Please Service my Room'"
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="669dp"
            android:layout_height="115dp"
            android:id="@+id/tvMarked"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"
    />


    <TextView
            android:text="We estimate that your room will be serviced by: 15:00."
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="669dp"
            android:layout_height="115dp"
            android:id="@+id/tvEstimate" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarked"/>


    <TextView
            android:text="We will notify you when your room is ready."
            android:textSize="42sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="669dp"
            android:layout_height="115dp"
            android:id="@+id/tvNotify"
            android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEstimate" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>