<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.StaffLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:layout_width="633dp"
            android:layout_height="95dp"
            android:text="Report Severe Mess"
            android:textSize="70sp"
            android:ems="10"
            android:id="@+id/tvReportSevereMess" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
    />

    <EditText
            android:layout_width="718dp"
            android:layout_height="220dp"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="20sp"
            android:hint="Description"
            android:textSize="40sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/etDescription" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReportSevereMess"/>

    <Button
            android:text="Submit To Supervisor"
            android:textSize="36sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="478dp"
            android:layout_height="102dp"
            android:id="@+id/btSevereMessSubmit" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/etDescription"/>

</android.support.constraint.ConstraintLayout>
