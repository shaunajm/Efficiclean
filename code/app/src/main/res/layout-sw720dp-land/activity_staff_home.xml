<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestHome">

    <Button
            android:text="View Map"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btViewMap"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.958" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"/>

    <Button
            android:text="Request Break"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btRequestBreak"
            android:layout_marginRight="40dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="59dp" app:layout_constraintTop_toBottomOf="@+id/btViewMap"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.99"/>

    <Button
            android:text="Current Room"
            android:textSize="26sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btCurrentRoom"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btRequestBreak" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.958"/>


    <ScrollView
        android:id="@+id/svTodaysTeams"
        android:layout_width="387dp"
        android:layout_height="506dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tbTeams"
            android:layout_width="368dp"
            android:layout_height="560dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:stretchColumns="1"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="34dip"
                    android:text="Today's Teams"
                    android:textSize="23sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamsRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 1"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 2"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 3"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 4"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 5"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTeamRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 6"
                    android:textSize="21sp" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/svQueue"
        android:layout_width="387dp"
        android:layout_height="506dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tbQueue"
            android:layout_width="368dp"
            android:layout_height="560dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:stretchColumns="1"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvQueueTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="34dip"
                    android:text="Queue"
                    android:textSize="23sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvQueueRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 1"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvQueueRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 2"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvQueueRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 3"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvQueueRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 4"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvQueueRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 5"
                    android:textSize="21sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvQueueRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="26dip"
                    android:text="Team 6"
                    android:textSize="21sp" />
            </TableRow>


        </TableLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
