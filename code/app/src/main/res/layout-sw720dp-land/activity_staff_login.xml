<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Staff Login"
            android:textSize="48sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStaffLogin"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"/>

    <TextView
            android:text="Please enter your password."
            android:textSize="36sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnterPassword"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStaffLogin" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <EditText
            android:layout_width="479dp"
            android:layout_height="70dp"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/myGold"
            android:textColorHint="#FFF"
            android:background="@color/colorPrimary"
            android:padding="15sp"
            android:hint="Username"
            android:textSize="26sp"
            android:ems="15"
            android:id="@+id/etUsername" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="99dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterPassword"/>

    <EditText
            android:layout_width="482dp"
            android:layout_height="73dp"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/myGold"
            android:textColorHint="#FFF"
            android:background="@color/colorPrimary"
            android:padding="15sp"
            android:hint="Password"
            android:textSize="26sp"
            android:ems="15"
            android:id="@+id/etPassword" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsername"/>

    <Button
            android:text="Login"
            android:textSize="30sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="225dp"
            android:layout_height="68dp"
            android:id="@+id/btStaffLogin" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"/>

</android.support.constraint.ConstraintLayout>
