<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Hazard Approval"
            android:textSize="44sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="360dp"
            android:layout_height="59dp"
            android:id="@+id/tvHazardsApproval"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp"/>

    <TextView
        android:id="@+id/tvRoomNumber"
        android:layout_width="178dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Room: 215"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHazardsApproval" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="182dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Description:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoomNumber" />

    <TextView
            android:layout_width="364dp"
            android:layout_height="77dp"
            android:text=""
            android:textColor="#000"
            android:padding="20sp"
            android:textSize="28sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/tvDescriptionBox" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHazardsApproval" app:layout_constraintHorizontal_bias="0.52"/>
    <CheckBox
            android:text="Approve"
            android:textSize="31sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="257dp"
            android:textAlignment="center"
            android:layout_height="60dp" android:id="@+id/cbApprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.407" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionBox"/>

    <CheckBox
            android:text="Disapprove"
            android:textSize="31sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="277dp"
            android:textAlignment="center"
            android:layout_height="64dp" android:id="@+id/cbDisapprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.415" android:layout_marginTop="-7dp"
            app:layout_constraintTop_toBottomOf="@+id/cbApprove"/>

    <EditText
            android:layout_width="498dp"
            android:layout_height="133dp"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="20sp"
            android:hint="Reason"
            android:textSize="28sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/etReason" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/cbDisapprove"/>

    <Button
            android:text="Submit"
            android:textSize="28sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="290dp"
            android:layout_height="72dp"
            android:id="@+id/btHazardApprovalSubmit" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/etReason"/>



</android.support.constraint.ConstraintLayout>