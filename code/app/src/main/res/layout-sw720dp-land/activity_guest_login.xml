<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Welcome to EfficiClean!"
            android:textSize="48sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWelcome720" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"/>

    <TextView
            android:text="Please enter your name."
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnterDetails720"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome720" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/myGold"
            android:textColorHint="#FFF"
            android:background="@color/colorPrimary"
            android:padding="15sp"
            android:hint="Forename"
            android:textSize="26sp"
            android:ems="15"
            android:id="@+id/etForename720"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="114dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterDetails720"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/myGold"
            android:textColorHint="#FFF"
            android:background="@color/colorPrimary"
            android:padding="15sp"
            android:hint="Surname"
            android:textSize="26sp"
            android:ems="15"
            android:id="@+id/etSurname720" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etForename720"/>

    <Button
            android:text="Login"
            android:textSize="30sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:onClick="loginButtonClick"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:id="@+id/btLogin720" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/etSurname720"/>

</android.support.constraint.ConstraintLayout>
