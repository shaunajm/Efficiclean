<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.activities.StaffHome">

    <Button
            android:text="Service approval"
            android:textSize="21sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btServiceApproval"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.963" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"/>

    <Button
            android:text="Hazards approval"
            android:textSize="21sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:id="@+id/btHazardApproval"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.962" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/btServiceApproval"/>

    <Button
            android:text="Severe Mess approval"
            android:textSize="21sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:id="@+id/btSevereMessApproval"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/btHazardApproval"/>

    <Button
            android:text="View map"
            android:textSize="21sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:id="@+id/btViewMap" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.962"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/btSevereMessApproval"/>
    <Button
            android:text="Approve break"
            android:textSize="21sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:id="@+id/btApproveBreak"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.962" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/btViewMap"/>

    <Button
            android:text="Report absence"
            android:textSize="21sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:id="@+id/btReportAbsence"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.962" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/btApproveBreak"/>

    <ScrollView
        android:id="@+id/svTeamProgress"
        android:layout_width="179dp"
        android:layout_height="398dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tbTeamProgress"
            android:layout_width="172dp"
            android:layout_height="417dp"
            android:stretchColumns="1"
            android:visibility="visible"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="110dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="24dip"
                    android:text="Team's Progress"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="18dip"
                    android:text="Team 1"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="18dip"
                    android:text="Team 2"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="18dip"
                    android:text="Team 3"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="18dip"
                    android:text="Team 4"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="18dip"
                    android:text="Team 5"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/tvRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/cell_border"
                    android:padding="18dip"
                    android:text="Team 6"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
