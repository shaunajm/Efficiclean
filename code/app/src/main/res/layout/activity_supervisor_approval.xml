<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.efficiclean.GuestLogin"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvBreakApproval"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"
        android:text="Breaks to be approved:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/tbTeams"
        android:layout_width="252dp"
        android:layout_height="360dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/table_layout"
        android:padding="5dp"
        android:stretchColumns="1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBreakApproval">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/team"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_layout"
                android:gravity="center"
                android:padding="15dip"
                android:text="Team"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_layout"
                android:gravity="center"
                android:padding="15dip"
                android:text="Time"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_layout"
                android:gravity="center"
                android:padding="15dip"
                android:text="TeamName" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_layout"
                android:gravity="center"
                android:padding="15dip"
                android:text="12:00" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
