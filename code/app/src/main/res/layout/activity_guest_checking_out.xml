<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Thank you for marking your room as 'Checking Out'"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="359dp"
            android:layout_height="53dp"
            android:id="@+id/tvMarked"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
            app:layout_constraintHorizontal_bias="0.555"/>


    <TextView
            android:text="We hope you enjoyed your stay."
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="355dp"
            android:layout_height="51dp"
            android:id="@+id/tvEnjoy" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarked" app:layout_constraintHorizontal_bias="0.538"/>


    <TextView
            android:text="Thank you for using Efficiclean."
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="365dp"
            android:layout_height="49dp"
            android:id="@+id/tvThankYou"
            android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnjoy" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.666"/>

</android.support.constraint.ConstraintLayout>