<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.efficiclean.GuestLogin"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Severe Mess Approval"
            android:textSize="32sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="360dp"
            android:layout_height="59dp"
            android:id="@+id/tvSevereMess"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"/>

    <TextView
            android:text="Room: 215"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:id="@+id/tvRoom"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/tvSevereMess"/>

    <TextView
            android:text="Description:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="134dp"
            android:layout_height="30dp"
            android:id="@+id/tvTitle" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.017"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/tvRoom"/>

    <EditText
            android:layout_width="193dp"
            android:layout_height="66dp"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="20sp"
            android:hint="XXXX"
            android:textSize="20sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/etDescription" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSevereMess" app:layout_constraintHorizontal_bias="0.851"
    />
    <CheckBox
            android:text="Approve"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="194dp"
            android:textAlignment="center"
            android:layout_height="35dp" android:id="@+id/cbApprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.045" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/etDescription"/>

    <CheckBox
            android:text="Disapprove"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="211dp"
            android:textAlignment="center"
            android:layout_height="48dp" android:id="@+id/cbDisapprove"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.05" android:layout_marginTop="-9dp"
            app:layout_constraintTop_toBottomOf="@+id/cbApprove"/>

    <EditText
            android:layout_width="316dp"
            android:layout_height="80dp"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="20sp"
            android:hint="Reason"
            android:textSize="19sp"
            android:background="@drawable/textview_border"
            android:ems="15"
            android:id="@+id/etReason" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/cbDisapprove"
    />

    <Button
            android:text="Submit"
            android:textSize="20sp"
            android:textColor="@color/myGold"
            android:background="@drawable/roundbutton"
            android:layout_width="179dp"
            android:layout_height="47dp"
            android:id="@+id/btSubmit" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/etReason" app:layout_constraintHorizontal_bias="0.502"
    />



</android.support.constraint.ConstraintLayout>